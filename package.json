{
  "name": "automate-vouchers",
  "version": "1.0.0",
  "description": "Automation for buying and claiming Swiggy vouchers from AmEx Gyftr Portal with n8n webhook integration",
  "main": "server.js",
  "scripts": {
    "start": "node gyftr_automate.js",
    "service": "node server.js",
    "validate": "node validate-env.js",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "dev": "NODE_ENV=development node server.js",
    "health": "curl -s http://localhost:3000/health | json_pp"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "playwright": "^1.54.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "automation",
    "voucher",
    "playwright",
    "n8n",
    "webhook",
    "otp"
  ],
  "author": "Harshit Luthra",
  "license": "BSD-2-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/bluebox/automate_vouchers"
  },
  "bugs": {
    "url": "https://github.com/bluebox/automate_vouchers/issues"
  },
  "homepage": "https://github.com/bluebox/automate_vouchers#readme",
  "engines": {
    "node": ">=16"
  }
}
